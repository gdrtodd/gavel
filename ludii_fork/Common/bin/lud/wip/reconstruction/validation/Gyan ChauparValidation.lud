        })
    }) 
    
    (rules 
        (start (place Stack items:{"Pawn4" "Pawn3" "Pawn2" "Pawn1"} coord:"A1"))	
        
        (play ("RollMove" (forEach Piece)))
        
        (end [#]) 
    )
)

