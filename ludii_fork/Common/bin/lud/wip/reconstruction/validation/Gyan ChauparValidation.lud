(game "Gyan ChauparValidation"
    (players 4) 
    (equipment { 
        (board (square 10) (track "Track" "0,E,N1,W,N1,E,N1,W,N1,E,N1,W,N1,E,N1,W,N1,E,N1,W" directed:True))
        (piece "Pawn" Each 
            (move 
                (from (from) level:(level)) 
                (to (mapEntry ("NextSiteOnTrack" (count Pips))))
