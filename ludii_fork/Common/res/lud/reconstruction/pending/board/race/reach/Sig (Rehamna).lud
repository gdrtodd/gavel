            (play [#]) // A throw of 1 is required for each piece's first move.
            (end 
                (if 
                    (and
                        (all Sites (difference (sites Next) (sites Occupied by:Mover)) if:(not ("IsFriendAt" (site)))) 
                        (not (no Pieces Mover))
                    )
                    (result Mover Win)
                )
            )
        )
        >
        "The incomplete ruleset."
    )
