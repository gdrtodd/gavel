    {
    (item "Incomplete"
        <
        (players 2)
        (equipment {
            (board 
                (rectangle 4 12) 	
                {
                [?]
                }
                use:Vertex
            )
            (piece "Stick" Each [#])
            (dice d:2 from:0 num:6)  
            (regions P1 (sites Bottom))
            (regions P2 (sites Top))
            (map "Throw" {(pair 0 0) (pair 1 1) (pair 2 2) (pair 3 3) (pair 4 4) (pair 5 1) (pair 6 6)})
